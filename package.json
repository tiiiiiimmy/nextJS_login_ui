{
  "name": "nextjs-login-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3020",
    "dev:api": "tsx api/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:api\"",
    "build": "next build",
    "build:api": "tsc --project tsconfig.api.json",
    "start": "next start",
    "start:api": "node dist/api/server.js",
    "lint": "eslint",
    "test": "jest",
    "test:api": "jest --config jest.config.api.js",
    "test:all": "npm test && npm run test:api",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "psql -U postgres -f database/schema.sql"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "next": "15.5.5",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
